@model Assignment1.Models.BaseViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Add Blog Post";
}

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="material-card1-sm">
            <form asp-controller="Home" asp-action="SubmitBlogPost">
                <h2 class="text-center">@ViewBag.Title</h2>
                <hr />
                <div class="form-group">
                    <label for="Title">Title:</label>
                    <input type="text" class="form-control" name="Title" id="Title">
                </div>
                <div class="form-group">
                    <label for="Content">Content:</label>
                    <textarea type="text" class="form-control" rows="5" name="Content" id="Content"></textarea>
                </div>
                <input hidden="hidden" name="UserId" id="UserId" value="@Model.User.UserId"/>
                <button type="submit" class="btn btn-default">Submit Post</button>
            </form>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>